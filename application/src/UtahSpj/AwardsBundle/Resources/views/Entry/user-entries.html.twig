{% extends "::base.html.twig" %}

{% block title %}UtahSpjAwardsBundle:Entry:view{% endblock %}

{% block body %}
    <h2>Entries for user: <small>{{ user.email }}</small></h2>
    <div>
        <p><a href="{{ path('utah_spj_awards_entry_create') }}" class="btn btn-primary">Create a new entry</a></p>
    </div>
    {% if unpaid_entries %}
        <h3>Unpaid Entries</h3>
        <table class="table">
            <tr><th>Title</th><th>URL</th><th>Paid</th><th>Submitted</th><th></th></tr>
            {% for entry in unpaid_entries %}
                <tr>
                    <td><a href="{{ path('utah_spj_awards_entry_view',{id:entry.id}) }}">{{ entry.title }}</a></td>
                    <td>{{ entry.url }}</td>
                    <td>{{ entry.paid ? 'Y' : 'No' }}</td>
                    <td>{{ entry.submitted|date("Y-m-d H:i") }}</td>
                    <td><a href="{{ path('utah_spj_awards_entry_edit',{id:entry.id}) }}">Edit</a></td>
                </tr>
            {% endfor %}
        </table>
    {% endif %}
    {% if paid_entries %}
        <h3>Paid entries</h3>
        <table class="table">
            <tr><th>Title</th><th>URL</th><th>Paid Date</th><th>Submitted</th><th></th></tr>
            {% for entry in paid_entries %}
                <tr>
                    <td><a href="{{ path('utah_spj_awards_entry_view',{id:entry.id}) }}">{{ entry.title }}</a></td>
                    <td>{{ entry.url }}</td>
                    <td>{{ entry.paid_date|date("Y-m-d H:i") }}</td>
                    <td>{{ entry.submitted|date("Y-m-d H:i") }}</td>
                    <td><a href="{{ path('utah_spj_awards_entry_edit',{id:entry.id}) }}">Edit</a></td>
                </tr>
            {% endfor %}
        </table>
    {% endif %}
{% endblock %}
